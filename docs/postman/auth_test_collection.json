        {
          "name": "Who Am I",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{base_url}}/auth/whoami",
              "host": ["{{base_url}}"],
              "path": ["auth", "whoami"]
            }
          },
          "event": [
